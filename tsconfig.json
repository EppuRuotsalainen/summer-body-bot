{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./",
        "types": [
            "node",
            "jest"
        ]
    },
    "include": [
        "src/**/*",
        "index.ts",
        "scripts/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ]
}