{
  "name": "summer-body-bot",
  "version": "1.0.0",
  "description": "A Telegram bot for tracking competition scores among Aalto guilds and teams.",
  "main": "index.js",
  "scripts": {
    "start": "bun index.ts",
    "populate": "bun scripts/populateTestData.ts",
    "clear": "bun scripts/clear.ts",
    "pod:populate": "podman exec -it summer-body-bot bun scripts/populateTestData.ts",
    "pod:clear": "podman exec -it summer-body-bot bun scripts/clear.ts",
    "pod:start": "podman-compose up -d --build",
    "pod:remove": "podman-compose down",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EppuRuotsalainen/summer-body-bot.git"
  },
  "keywords": [
    "telegram",
    "telegram-bot",
    "telegraf",
    "telegraf-bot",
    "telegraf-wizards",
    "telegraf-scenes",
    "nodejs",
    "mongodb",
    "mongoose",
    "bot"
  ],
  "author": "Eppu Ruotsalainen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/EppuRuotsalainen/summer-body-bot/issues"
  },
  "homepage": "https://github.com/EppuRuotsalainen/summer-body-bot#readme",
  "dependencies": {
    "dotenv": "^16.4.5",
    "mongodb": "^6.4.0",
    "mongoose": "^8.2.0",
    "node-cron": "^3.0.3",
    "node-schedule": "^2.1.1",
    "telegraf": "^4.16.2",
    "telegraf-session-local": "^2.1.1",
    "pdfkit": "^0.16.0",
    "svg-to-pdfkit": "^0.1.8",
    "d3-node": "^4.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^25.0.2",
    "@types/node-cron": "^3.0.11",
    "@types/node-schedule": "^2.1.8",
    "@types/pdfkit": "^0.17.4",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "jest": "^29.7.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0"
  }
}